<UserControl x:Class="CredentialEvaluationApp.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CredentialEvaluationApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                        Storyboard.TargetName="border"
                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                        To="#D0D0D0"
                                        Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                        Storyboard.TargetName="border"
                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                        To="White"
                                        Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Sidebar -->
    <Border CornerRadius="5"
        HorizontalAlignment="Center"
        Margin="20,40,10,70"
        Background="White">

        <StackPanel Grid.Column="0"
                Background="White"
                Orientation="Vertical"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="0,40,0,0"
                Width="Auto"
                >

            <Button Content="Search"
                FontFamily="pack://application:,,,/Fonts/#Quicksand"
                FontWeight="Regular"
                FontSize="11"
                Background="White"
                Foreground="Black"
                Style="{StaticResource SidebarButtonStyle}"
                Margin="0,20,0,0"
                Padding="10"
                BorderThickness="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Cursor="Hand"
                Height="27"
                Width="105" Click="SearchButton_Click"/>

            <Button Content="Calculator"
                Style="{StaticResource SidebarButtonStyle}"
                FontFamily="pack://application:,,,/Fonts/#Quicksand"
                FontWeight="Regular"
                FontSize="11"
                Background="White"
                Foreground="Black" 
                Margin="0,0,0,0"
                Padding="0"
                BorderThickness="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Cursor="Hand"
                Height="27"
                Width="105" Click="CalculatorButton_Click"/>

            <Button Content="Grading Scales"
                Style="{StaticResource SidebarButtonStyle}"
                FontFamily="pack://application:,,,/Fonts/#Quicksand"
                FontWeight="Regular"
                FontSize="11"
                Background="White"
                Foreground="Black" 
                Margin="0,0,0,0"
                Padding="0"
                BorderThickness="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Cursor="Hand"
                Height="27"
                Width="105"
                Click="GradingScaleButton_Click"/>

            <Button Content="Settings"
                    Style="{StaticResource SidebarButtonStyle}"
                    FontFamily="pack://application:,,,/Fonts/#Quicksand"
                    FontWeight="Regular"
                    FontSize="11"
                    Background="White"
                    Foreground="Black" 
                    Margin="0,0,0,0"
                    Padding="0"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Cursor="Hand"
                    Height="27"
                    Width="105"
                    Click="SettingsButton_Click"/>



        </StackPanel>


    </Border>





</UserControl>
