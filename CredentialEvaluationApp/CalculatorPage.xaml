<UserControl x:Class="CredentialEvaluationApp.CalculatorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CredentialEvaluationApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="LightGray"
             Loaded="UserControl_Loaded">

    <!-- Calculator -->
    <Grid x:Name="PageContent">
        <ScrollViewer Grid.Column="1"
                      x:Name="CalculatorScrollViewer"
                      VerticalScrollBarVisibility="Hidden"
                      Margin="20,0,30,0"
                      HorizontalContentAlignment="Stretch"
                      PanningMode="Both">

            <StackPanel Margin="0,20,0,0">

                <!-- STUDENT INFO -->
                <Border CornerRadius="10"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,20"
                        Background="White">


                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Width="700"
                                Height="Auto">

                        <!-- First Name Field -->
                        <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        Margin="12,0,0,0">

                            <TextBlock Text="First Name"
                                       Margin="15,15,0,5"
                                       FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                       FontWeight="Regular"
                                       FontSize="11"/>
                            <TextBox x:Name="firstNameTextBox"
                                     Width="150"
                                     Height="25"
                                     Margin="15,0,0,15"
                                     FontSize="11"
                                     FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                     Background="#F0F0F0"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"
                                     HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- Last Name Field -->
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center">

                            <TextBlock Text="Last Name"
                                       Margin="15,15,0,5"
                                       FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                       FontWeight="Regular"
                                       FontSize="11"/>
                            <TextBox x:Name="lastNameTextBox"
                                     Width="150"
                                     Height="25"
                                     Margin="15,0,0,0"
                                     FontSize="11"
                                     FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                     Background="#F0F0F0"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"
                                     HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- DOB Field -->
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center">

                            <TextBlock Text="DOB"
                                       Margin="15,15,0,5"
                                       FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                       FontWeight="Regular"
                                       FontSize="11"/>
                            <DatePicker x:Name="dateOfBirthPicker"
                                        Width="150"
                                        Margin="15,0,0,0"
                                        FontSize="11"
                                        FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                        Background="#F0F0F0"
                                        BorderBrush="#CCCCCC"
                                        BorderThickness="1"
                                        HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- Application Term Field -->
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center">

                            <TextBlock Text="Application Term"
                                       Margin="15,15,0,5"
                                       FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                       FontWeight="Regular"
                                       FontSize="11"/>
                            <TextBox x:Name="applicationTermTextBox"
                                     Width="150"
                                     Height="25"
                                     Margin="15,0,0,20"                            
                                     FontSize="11"
                                     FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                     Background="#F0F0F0"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"
                                     HorizontalAlignment="Left"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

                <!-- TRANSCRIPTS -->
                <StackPanel x:Name="TranscriptPanel">

                </StackPanel>

                <Grid Margin="0,0,0,15" Width="700">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Add Transcript"
                        Width="107"
                        Height="20"
                        Margin="0,0,5,0"
                        FontFamily="pack://application:,,,/Fonts/#Quicksand"
                        FontSize="11"
                        FontWeight="Regular"
                        Background="White"
                        Foreground="Black"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                        Cursor="Hand"
                        Click="AddTranscript_Click">

                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>

                    </Button>

                    <Border CornerRadius="5"
                            HorizontalAlignment="Left"
                            Margin="00,0,0,0"
                            Background="White">

                        <StackPanel Orientation="Vertical"
                                    Width="Auto"
                                    HorizontalAlignment="Left">

                            <!-- Toggle button -->
                            <Button Content="Evenly Weight Transcripts +"
                                    x:Name="ToggleEvenlyWeightButton"
                                    Click="ToggleEvenlyWeightSection"
                                    FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                    FontSize="11"
                                    FontWeight="Regular"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalAlignment="Left"
                                    Foreground="Black"
                                    Margin="0,0,0,0"
                                    Height="22"/>

                            <!-- Collapsible content -->
                            <StackPanel x:Name="EvenlyWeightSection"
                                    Visibility="Collapsed"
                                    Margin="10,0,0,0"
                                    Width="550">
                                <TextBlock Text="Select transcripts to evenly weight:"
                                       FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                       FontSize="11"
                                       FontWeight="Regular"
                                       Margin="5,0,0,0"/>

                                <ListBox x:Name="TranscriptList"
                                     SelectionMode="Multiple"
                                     MinHeight="50"
                                     Width="Auto"
                                     HorizontalAlignment="Left"
                                     Margin="0,0,10,10"
                                     FontSize="12"
                                     FontFamily="pack://application:,,,/Fonts/#Quicksand">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding TranscriptTitle}"
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                      IsEnabled="{Binding IsEnabled}"
                                                      Checked="TranscriptCheckBox_Checked"
                                                      Unchecked="TranscriptCheckBox_Unchecked" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>


                                <Button Content="Evenly Weight"
                                    x:Name="EvenlyWeightButton"
                                    Width="107"
                                    Height="22"
                                    Margin="5,0,0,15"
                                    FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                    FontSize="11"
                                    FontWeight="Regular"
                                    Background="#CCCCCC"
                                    Foreground="Black"
                                    BorderThickness="0"
                                    HorizontalAlignment="Left"
                                    Cursor="Hand"
                                    Click="EvenlyWeightButton_Click">

                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>

                                </Button>

                                <TextBlock Text="Add or Select at least 2 transcript of the same level to evenly weigh!"
                                       x:Name="EvenlyWeightErrorTextBlock"
                                       Foreground="Red"
                                       FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                       FontSize="11"
                                       FontWeight="Regular"
                                       Margin="5,0,0,15"
                                       Visibility="Collapsed"/>

                            </StackPanel>

                        </StackPanel>
                    </Border>

                </Grid>



                <!-- OUTPUT -->
                <Border CornerRadius="10"
                        HorizontalAlignment="Center"
                        Margin="0,5,0,10"
                        Background="White">

                    <StackPanel Orientation="Vertical"
                                Width="700"
                                HorizontalAlignment="Center">

                        <!-- GPA Labels -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0">

                            <!-- High School GPA -->
                            <StackPanel HorizontalAlignment="Center"
                                        Margin="0,0,0,10">

                                <TextBlock Text="High School"
                                           Margin="0,20,0,10"
                                           FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           HorizontalAlignment="Center"/>


                                <!-- GPA Row -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,10">

                                    <TextBlock Text="GPA: "
                                               Margin="0,0"
                                               FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                               FontWeight="Regular"
                                               FontSize="15"/>

                                    <TextBlock x:Name="GpaTextBlock"
                                               Text="0.00"
                                               Margin="0,0"
                                               FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                               FontWeight="Regular"
                                               FontSize="15"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- University GPA -->
                            <StackPanel x:Name="UniStackPanel"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,10">

                                <TextBlock x:Name="UniGpaHeaderTextBlock"
                               Margin="0,20,0,10"
                               FontFamily="pack://application:,,,/Fonts/#Quicksand"
                               FontWeight="Bold"
                               FontSize="16"
                               HorizontalAlignment="Center"/>


                                <!-- GPA Row -->
                                <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,10">

                                    <TextBlock x:Name="UniGpaTextBlock"
                                   Margin="0,0"
                                   FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                   FontWeight="Regular"
                                   FontSize="15"/>

                                    <TextBlock x:Name="UniGpaNumTextBlock"
                                   Margin="0,0"
                                   FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                   FontWeight="Regular"
                                   FontSize="15"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,20">

                            <Button Content="Calculate"
                                    Width="83"
                                    Height="20"
                                    Margin="15,0"
                                    FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                    FontSize="11"
                                    FontWeight="Regular"
                                    Background="#CCCCCC"
                                    Foreground="Black"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="CalculateButton_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="7"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                        </StackPanel>
                    </StackPanel>
                </Border>

                <Grid Margin="0,0,0,30" Width="700">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Save Button -->
                    <Button Content="Save"
                            Width="95"
                            Height="25"
                            FontFamily="pack://application:,,,/Fonts/#Quicksand"
                            FontSize="11"
                            FontWeight="Regular"
                            Background="#F0F0F0"
                            Foreground="Black"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="SaveButton_Click"
                            HorizontalAlignment="Left">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- Save Button -->
                    <Button Content="Clear"
                            Width="65"
                            Height="25"
                            Margin="110,0,0,0"
                            FontFamily="pack://application:,,,/Fonts/#Quicksand"
                            FontSize="11"
                            FontWeight="Regular"
                            Background="#F0F0F0"
                            Foreground="Black"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ClearButton_Click"
                            HorizontalAlignment="Left">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- Delete Button -->
                    <Button x:Name="DeleteGradingScaleButton"
                            Content="Delete Student"
                            Width="115"
                            Height="25"
                            FontFamily="pack://application:,,,/Fonts/#Quicksand"
                            FontSize="11"
                            FontWeight="Regular"
                            Background="Red"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="DeleteStudent_Click"
                            Grid.Column="1"
                            HorizontalAlignment="Right">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <Grid Margin="0,0,0,30" Width="700">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <Button Content="Export to Excell"
                        Margin="0,0,130,30"
                        Width="125"
                        Height="25"
                        FontFamily="pack://application:,,,/Fonts/#Quicksand"
                        FontSize="11"
                        FontWeight="Regular"
                        Background="#F0F0F0"
                        Foreground="Black"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ExportToExcell_Click"
                        HorizontalAlignment="Center">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="Export to PDF"
                        Margin="130,0,0,30"
                        Width="103"
                        Height="25"
                        FontFamily="pack://application:,,,/Fonts/#Quicksand"
                        FontSize="11"
                        FontWeight="Regular"
                        Background="#F0F0F0"
                        Foreground="Black"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ExportToPDF_Click"
                        HorizontalAlignment="Center">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>


</UserControl>
