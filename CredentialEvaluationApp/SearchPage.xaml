<UserControl x:Class="CredentialEvaluationApp.SearchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CredentialEvaluationApp"
             mc:Ignorable="d" 
             d:DesignHeight="1050" d:DesignWidth="800"
             Background="LightGray"
             Loaded="UserControl_Loaded">
    <!-- height = 450 -->

    <!-- Grading Scale Editor -->
    <Grid x:Name="PageContent">
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                      Margin="20,0,30,0"
                      HorizontalContentAlignment="Stretch"
                      PanningMode="Both">

            <StackPanel Margin="0,20,0,0">

                <Grid Margin="0,20,0,0"
                      Width="700">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search Bar -->
                    <TextBox x:Name="StudentSearchBox"
                             Margin="0,15,0,10"
                             Width="200"
                             FontFamily="pack://application:,,,/Fonts/#Quicksand"
                             FontWeight="Regular"
                             FontSize="11"
                             Background="#F0F0F0"
                             BorderBrush="#CCCCCC"
                             TextChanged="StudentSearchBox_TextChanged"
                             HorizontalAlignment="Left"
                             Text="Search by name..."
                             Foreground="Gray"
                             GotFocus="StudentSearchBox_GotFocus"
                             LostFocus="StudentSearchBox_LostFocus"
                             />

                    <!-- Student List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <DataGrid x:Name="StudentGrid"
                                  Grid.Row="1"
                                  Width="700"
                                  MaxHeight="300"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  SelectionMode="Single"
                                  Margin="0,10,0,0">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                                <DataGridTextColumn Header="DOB" Binding="{Binding DOB, StringFormat=\{0:MM/dd/yyyy\}}" Width="*"/>
                                <DataGridTextColumn Header="Term" Binding="{Binding Term}" Width="*"/>
                                <DataGridTemplateColumn Header="" Width="*">

                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="View"
                                                Click="ViewStudent_Click"
                                                Tag="{Binding}"                                               
                                                FontSize="11"
                                                Padding="2,0"
                                                MaxHeight="20"
                                                Width="50"
                                                HorizontalAlignment="Center"
                                                Background="#CCCCCC"
                                                Foreground="Black"
                                                BorderBrush="White"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>

                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>


                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>


</UserControl>
