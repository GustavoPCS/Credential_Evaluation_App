<UserControl x:Class="CredentialEvaluationApp.GradingScalePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CredentialEvaluationApp"
             mc:Ignorable="d" 
             d:DesignHeight="1050" d:DesignWidth="800"
             Background="LightGray"
             Loaded="UserControl_Loaded">
    <!-- height = 450 -->

    <UserControl.Resources>
        <DataTemplate x:Key="DeleteButtonTemplate">
            <Button Content="Delete"
            Click="DeleteScore_Click"
            Tag="{Binding}"
            FontSize="8"
            Padding="4,0"
            MaxHeight="10"
            HorizontalAlignment="Center"
            Background="#E57373" 
            Foreground="White"/>
        </DataTemplate>
    </UserControl.Resources>

    <!-- Grading Scale Editor -->
    <Grid x:Name="PageContent">
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                      Margin="20,0,30,0"
                      HorizontalContentAlignment="Stretch"
                      PanningMode="Both">

            <StackPanel Margin="0,20,0,0">

                <Grid Margin="0,20,0,0"
                      Width="700">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search Bar -->
                    <TextBox x:Name="SearchBox"
                             Margin="0,15,0,10"
                             Width="200"
                             FontFamily="pack://application:,,,/Fonts/#Quicksand"
                             FontWeight="Regular"
                             FontSize="11"
                             Background="#F0F0F0"
                             BorderBrush="#CCCCCC"
                             TextChanged="SearchBox_TextChanged"
                             HorizontalAlignment="Left"
                             Text="Search by name..."
                             Foreground="Gray"
                             GotFocus="SearchBox_GotFocus"
                             LostFocus="SearchBox_LostFocus"
                             />
                    
                    <!-- Create GS Button -->
                    <Button x:Name="CreateNewButton"
                            Content="Create New"
                            Width="102"
                            Height="25"
                            Margin="0,15,0,10"
                            FontFamily="pack://application:,,,/Fonts/#Quicksand"
                            FontSize="11"
                            FontWeight="Regular"
                            Background="#F0F0F0"
                            Foreground="Black"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CreateNew_Click"
                            HorizontalAlignment="Right">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>
                    </Button>


                    <!-- Grading Scale List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="250">
                        <DataGrid x:Name="GradingScaleGrid"
                                  Grid.Row="1"
                                  Width="700"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  SelectionMode="Single"
                                  Margin="0,10,0,0">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding ScaleName}" Width="*"/>
                                <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="*"/>
                                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="*"/>
                                <DataGridTemplateColumn Header="" Width="*">

                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Edit"
                                                Click="EditGradingScale_Click"
                                                Tag="{Binding}"                                               
                                                FontSize="11"
                                                Padding="2,0"
                                                MaxHeight="20"
                                                Width="50"
                                                HorizontalAlignment="Center"
                                                Background="#CCCCCC"
                                                Foreground="Black"
                                                BorderBrush="White"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>

                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>


                </Grid>

                <StackPanel x:Name="GradingScaleInfo">
                    <!-- Grading Scale INFO -->
                    <Border CornerRadius="10"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,0"
                                Background="White">


                        <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Width="700"
                                        Height="Auto">

                            <!-- GS Name Field -->
                            <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            Margin="12,0,0,0">

                                <TextBlock Text="Grading Scale Name"
                                               Margin="15,15,0,5"
                                               FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                               FontWeight="Regular"
                                               FontSize="11"/>
                                <TextBox x:Name="GradingScaleNameTextBox"
                                             Width="315"
                                             Height="25"
                                             Margin="15,0,0,15"
                                             FontSize="11"
                                             FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                             Background="#F0F0F0"
                                             BorderBrush="#CCCCCC"
                                             BorderThickness="1"
                                             HorizontalAlignment="Left"/>
                            </StackPanel>

                            <!-- GS Country Field -->
                            <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center">

                                <TextBlock Text="Country"
                                               Margin="15,15,0,5"
                                               FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                               FontWeight="Regular"
                                               FontSize="11"/>
                                <TextBox x:Name="GradingScaleCountryTextBox"
                                             Width="150"
                                             Height="25"
                                             Margin="15,0,0,0"
                                             FontSize="11"
                                             FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                             Background="#F0F0F0"
                                             BorderBrush="#CCCCCC"
                                             BorderThickness="1"
                                             HorizontalAlignment="Left"/>
                            </StackPanel>

                            <!-- GS Level Field -->
                            <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center">

                                <TextBlock Text="Level"
                                               Margin="15,15,0,5"
                                               FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                               FontWeight="Regular"
                                               FontSize="11"/>
                                <TextBox x:Name="GradingScaleLevelTextBox"
                                             Width="150"
                                             Height="25"
                                             Margin="15,0,0,20"                            
                                             FontSize="11"
                                             FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                             Background="#F0F0F0"
                                             BorderBrush="#CCCCCC"
                                             BorderThickness="1"
                                             HorizontalAlignment="Left"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <!-- GS Mappings -->
                    <StackPanel Width="702" Height="Auto">

                        <Border CornerRadius="10"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,15"
                                Background="White" Width="700">


                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        Width="700"
                                        Height="Auto">

                                <!-- Transcript DataGrid -->
                                <StackPanel Orientation="Horizontal" Margin="15,0,0,0" HorizontalAlignment="Left" Width="330">
                                    <TextBlock Text="Grading Scale Mappings"
                                               Margin="0,15,0,5"
                                               FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                               FontWeight="Regular"
                                               FontSize="11"/>
                                    <Button x:Name="EditToggleButton"
                                        Content="Edit"
                                        Click="ToggleEditMode_Click"
                                        FontSize="10"
                                        Padding="0"
                                        Margin="10,7,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="Purple"
                                        Cursor="Hand"
                                        VerticalAlignment="Center"
                                        FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                        FontWeight="Regular"/>
                                </StackPanel>
                                <DataGrid x:Name="GradingScaleMappingsDataGrid"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          Margin="15,0,0,10"
                                          ItemsSource="{Binding Mappings}"
                                          SelectionMode="Single"
                                          SelectionUnit="Cell"
                                          IsReadOnly="False"
                                          FontSize="10"
                                          HorizontalAlignment="Left"
                                          RowHeight="30"
                                          Style="{StaticResource MaterialDesignDataGrid}"
                                          RowStyle="{StaticResource MaterialDesignDataGridRow}">

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Local Grade" Binding="{Binding LocalGrade}" Width="100"/>

                                        <DataGridTemplateColumn Header="US Equivalent" Width="100">
                                            <DataGridTemplateColumn.CellStyle>
                                                <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridCell_PreviewMouseLeftButtonDown"/>
                                                </Style>
                                            </DataGridTemplateColumn.CellStyle>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <ComboBox ItemsSource="{Binding DataContext.USGrades, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                              SelectedItem="{Binding USLetter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellEditingTemplate>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding USLetter}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Add Score Button -->
                                <Button Content="Add Score"
                                        Width="95"
                                        Height="20"
                                        Margin="0,0,0,20"
                                        FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                        FontSize="11"
                                        FontWeight="Regular"
                                        Background="#CCCCCC"
                                        Foreground="Black"
                                        BorderThickness="0"
                                        HorizontalAlignment="Center"
                                        Cursor="Hand"
                                        Click="AddScore_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>


                            </StackPanel>


                        </Border>

                    </StackPanel>

                    <Grid Margin="0,0,0,30" Width="700">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Save Button -->
                        <Button Content="Save"
                                Width="95"
                                Height="25"
                                FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                FontSize="11"
                                FontWeight="Regular"
                                Background="#F0F0F0"
                                Foreground="Black"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="Save_Click"
                                HorizontalAlignment="Left">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="7"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <!-- Delete Button -->
                        <Button x:Name="DeleteGradingScaleButton"
                                Content="Delete Grading Scale"
                                Width="145"
                                Height="25"
                                FontFamily="pack://application:,,,/Fonts/#Quicksand"
                                FontSize="11"
                                FontWeight="Regular"
                                Background="Red"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="DeleteGradingScale_Click"
                                Grid.Column="1"
                                HorizontalAlignment="Right">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="7"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>


</UserControl>
